<%= form_for @task, remote: true do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Describe your task" %>
  </div>

  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.text_field :deadline, id: "datetimepicker1", class: "form-control", placeholder: "When's it due?"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<br>
